# API redirects - redirect /api/* to netlify functions
/api/* /.netlify/functions/:splat 200

# Function redirects with specific paths
/.netlify/functions/weather /.netlify/functions/weather 200
/.netlify/functions/geocoding /.netlify/functions/geocoding 200
/.netlify/functions/search-cities /.netlify/functions/search-cities 200
/.netlify/functions/background-image /.netlify/functions/background-image 200

# Handle CORS preflight requests
/.netlify/functions/* /.netlify/functions/:splat 200
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type

# SPA fallback - all other routes serve index.html (for client-side routing)
/* /index.html 200

# Security headers for all pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self' https:; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https:;

# Cache static assets
/style.css
  Cache-Control: public, max-age=31536000, immutable

/script.js
  Cache-Control: public, max-age=31536000, immutable

# Cache API responses for shorter time
/.netlify/functions/*
  Cache-Control: public, max-age=300, s-maxage=600

# Handle different file extensions
/manifest.json
  Content-Type: application/manifest+json

# Redirect old paths if needed (optional)
/weather /index.html 301
/forecast /index.html 301

# Block access to sensitive files
/.env* 404
/netlify.toml 404
/package.json 404
/package-lock.json 404
/node_modules/* 404